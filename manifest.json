{
  "name": "Loginas",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Allow you to log in as any user in your salesforce org, and is searchable",
  "homepage_url": "http://www.bryanleboff.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": {                    // optional
      "19": "icons/icon19.png",          // optional
      "38": "icons/icon38.png"            // optional
    },
    "default_title": "Loginas",    // optional; shown in tooltip
    "default_popup": "popup/index.html"        // optional
   },
  "default_locale": "en",
  "background": {
    "page": "bg/background.html",
    "persistent": true
  },
  "permissions": [
    "https://*.salesforce.com/*",
    "cookies",
    "tabs"
  ]
}